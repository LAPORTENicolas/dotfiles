#
# wm independent hotkeys
#

# move window with select node
super + alt + {Left}
    bspc node -d prev.local; bspc desktop -f prev.local
	
super + alt + {Right}
    bspc node -d next.local; bspc desktop -f next.local

# move window
super + {Left,Right}
	bspc desktop -f {prev,next}.local
#
#super + {Left,Right}
#	bspc {desktop -f,node -d} '^{1-9,10}'
#	bspc desktop -f (bspc query -M -m focused) {prev,next}.local

# switch node
super + shift + {Left, Right, Up, Down}
	bspc node -f {west, east, north, south}

super + shift + {h, l, k, j}
	bspc node -f {west, east, north, south}

# swap node
super + ctrl + {Left, Right, Up, Down}
	bspc node -s {west, east, north, south}

super + ctrl + {h, l, k, j}
	bspc node -s {west, east, north, south}

# program launcher
super + @space
	dmenu_run

super + alt + r
	bspc wm -r

# terminal emulator
super + Return
	kitty

super + shift + p
	firefox

super + shift + o
#	pkill ShadowPCBeta
	prime-run ./Downloads/ShadowPC.AppImage --enable-gpu --no-sandbox
	#gamemoderun ./Downloads/ShadowPCBeta.AppImage --enable-gpu --no-sandbox

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# close and kill
super + Return + q
	bspc node -{c,k}

super + q
  bspc node -c

super + alt + shift + {Left, Right, Up, Down}
  bspc node -z {left -20 0,right 20 0, top 0 -20, right 20 0}

super + ctrl + shift + {Left, Right, Up, Down}
  bspc node -z {right -20 0,left 20 0, bottom 0 -20, top 20 0}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local


#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
#super + {_,shift + }{h,j,k,l}
#	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

super + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

#
# move/resize
#

# expand a window by moving one of its side outward
ctrl + alt + {Left,j,k,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + shift + w
	exec ~/.config/script/set_wallpaper.sh
